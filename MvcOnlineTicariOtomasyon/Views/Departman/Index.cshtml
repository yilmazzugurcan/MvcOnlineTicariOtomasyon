
@model  List<Departman>
@using MvcOnlineTicariOtomasyon.Models.Class;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;margin-left:20px;margin-right:20px">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>
                @k.Departmanid
            </td>
            <td>
                @k.Departmanad
            </td>
            <td><a href="/Departman/DepartmanSil/@k.Departmanid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@k.Departmanid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@k.Departmanid" class="btn btn-success" style="background-color:deeppink">Detay</a></td>
        </tr>
    }

</table>

<a href="/Departman/DepartmanEkle" class="btn btn-info" style="margin-left:20px">Departman Ekle</a>

