@using MvcOnlineTicariOtomasyon.Models.Class
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;margin-left:20px">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>

    @foreach (var k in Model)
    {

        <tr>
            <td>
                @k.Faturaid
            </td>
            <td>
                @k.FaturaSeriNo
            </td>
            <td>
                @k.FaturaSiraNo
            </td>
            <td>
                @k.VergiDairesi
            </td>
            <td>
                @k.Tarih
            </td>
            <td>
                @k.Saat
            </td>
            <td>
                @k.Toplam
            </td>
            <td>
                @k.TeslimEden
            </td>
            <td>
                @k.TeslimAlan
            </td>



            <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-success" style="background-color:deeppink">Detay</a></td>
        </tr>
    }

</table>

<a href="/Fatura/FaturaEkle" class="btn btn-info" style="margin-left:20px">Fatura Ekle</a>

